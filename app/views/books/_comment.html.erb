<table>
  <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to (book_comment.user) do%>
          <%= image_tag book_comment.user.get_profile_image, size: "50x50" %><br>
          <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <td>
        <% if current_user == book_comment.user %>
          <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, remote: true, class: "btn btn-danger" %>
        <% end %> 
      </td>
    </tr>
  <% end %>
</table>
<%= form_with model: [book, book_comment], local: false do |f| %>
  <%= f.text_area :comment, style: "width:100%", rows: "3" %><br>
  <%= f.submit "送信" %>
<% end %>  







